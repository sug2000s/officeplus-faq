# Application Environment
APP_ENV=local
ENVIRONMENT=local
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# PostgreSQL Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=3009
POSTGRES_DB=ep_ax_agent
POSTGRES_USER=ep_user
POSTGRES_PASSWORD=ep2005!
POSTGRES_POOL_MIN=2
POSTGRES_POOL_MAX=10

# Alternative: Use a full DSN instead
# POSTGRES_DSN=postgresql+asyncpg://ep_user:ep2005!@localhost:3009/ep_ax_agent

# Redis Configuration
# Redis 세션 관리 및 대화 이력 저장
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
# Cluster 모드 사용 시 true로 설정 (ATi-Backend 호환)
REDIS_CLUSTER_MODE=false

# Session Configuration
# 세션 타임아웃 (초 단위, 기본 3600 = 1시간)
SESSION_TTL=3600
# Redis 세션 키 prefix (AX:{쿠키값} 형식)
SESSION_PREFIX=AX

# Frontend Configuration
FRONTEND_DIST=../frontend/dist
FRONTEND_PREFIX=/